                    {
                        "value": "left",
                        "label": "t:g.patterns.settings.animation_options.left"
                    },
                    {
                        "value": "top-left",
                        "label": "t:g.patterns.settings.animation_options.top_left"
                    }
                ],
                "default": "none",
                "info": "t:g.patterns.settings.animation_info"
            }
        ],
        "blocks": [
            {
                "type": "spot_text",
                "name": "Text",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image",
                        "info": "Optional. 100x100px recommended."
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "t:g.common.label.heading",
                        "default": "Card title"
                    },
                    {
                        "type": "inline_richtext",
                        "id": "text",
                        "label": "Text"
                    },
                    {
                        "type": "header",
                        "content": "Dot position"
                    },
                    {
                        "type": "range",
                        "id": "coord_x",
                        "label": "Horizontal position",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "unit": "%",
                        "default": 50
                    },
                    {
                        "type": "range",
                        "id": "coord_y",
                        "label": "Vertical position",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "unit": "%",
                        "default": 50
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image hot spots",
                "blocks": [
                    {
                        "type": "spot_text"
                    }
                ]
            }
        ],
        "disabled_on": {
            "templates": ["password"],
            "groups": ["header", "footer", "custom.overlay"]
        }
    }
{% endschema %}
