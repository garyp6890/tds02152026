{%- liquid
    assign NS = 'newsletter-popup'
    assign cn = '#' | append: NS
    
    if section.blocks.size > 0
        assign show_popup = true
        if section.settings.new_customers_only and customer
            assign show_popup = false
        endif
    endif
    
    assign overlay = 0
    if section.settings.image_position == 'bg'
      assign overlay = section.settings.image_overlay
    endif

    if section.settings.image_position == 'bg' or section.settings.image_position == 'top'
      assign image_res = 800
    else
      assign image_res = 560
    endif

    assign ms_in_day = 86400000
    if section.settings.popup_type == 'popover'
        assign use_popover = true
    endif
-%}

{% if show_popup %}

    {% render 'load-css', file: NS, lazy: true %}
    {% render 'load-css', file: 'hero-newsletter', lazy: true %}
        
    {% capture Modal_content %}
        <div class="{{ cn }}-modal {% if section.settings.image != blank %}@with-image @image-position:{{ section.settings.image_position }}{% endif %}">
            {% if use_popover %}
                <button class="{{ cn }}-modal-close" title="{{ 'accessibility.close' | t }}" data-element="close-button">
                    {% render 'icon', name: 'x' %}
                </button>
            {% else %}
                <modal-close class="{{ cn }}-modal-close" section-id="{{ section.id }}">
                    {% render 'icon', name: 'x' %}
                </modal-close>
            {% endif %}
            {%- if section.settings.image != blank -%}
                <div class="{{ cn }}-image mobile-hidden">
                    {% render 'media',
                        image: section.settings.image,
                        overlay: overlay,
                        image_res: image_res
                    %}
                </div>
            {%- endif -%}
            <div class="{{ cn }}-text">
                {% render 'hero',
                    blocks: section.blocks,
                    align: 'center',
                    width: 100
                %}
            </div>
        </div>
    {% endcapture %}

    <{{ NS }}
        class="{{ cn }} {% if use_popover %} {% endif %} initial-hidden color-scheme-{{ section.settings.color_scheme }}"
        section-id="{{ section.id }}"
        timeout="{{ section.settings.days_to_re_appear | times: ms_in_day }}"
        display-delay="{{ section.settings.display_delay_sec | times: 1000 }}"
        {% if use_popover -%}
            use-popover
        {%- endif %}
        {% if section.settings.use_trigger_button %}
            floating-button 
        {% endif %}
    >
        {% if use_popover %}
            <div class="{{ cn }}-popover" data-element="popover" popover="manual">
                {{ Modal_content }}
            </div>
        {% else %}
            {% render 'modal',
                content: Modal_content,
                id: NS,
                show_close: false,
                animation: 'zoom'
            %} 
        {% endif %}
        {% if section.settings.use_trigger_button %}
            <div class="{{ cn }}-floating-button" data-element="floating-button" hidden>
                <div class="{{ cn }}-floating-button-trigger">
                    {% render 'icon', name: section.settings.floating_button_icon, load: true %}
                    <span class="{{ cn }}-floating-button-trigger-text">{{ section.settings.floating_button_label }}</span>
                </div>
                <button class="{{ cn }}-floating-button-close" title="{{ 'accessibility.close' | t }}" data-element="floating-button-close">
                    {% render 'icon', name: 'x' %} 
                </button>
            </div>
        {% endif %}
    </{{ NS }}>

    <script type="module" src="{{ 'newsletter-popup.js' | asset_url }}"></script>
{% endif %}

{%- if request.design_mode -%}
    <script type="text/json" data-{{section.id}}-blocks-size-settings>
        {{ section.blocks.size | json }}
    </script>
    <script type="module">
        const { Utils, DOMEvents } = Global;
        const { debounce, $show, $hide } = Utils;

        class EditorNewsletterPopup extends window.Editor {
            events = {
                section: {
                    select: this._onNewsletterPopupSelect,
                    deselect: this._onNewsletterPopupDeselect
                },
                block: {
                    select: this._onNewsletterPopupBlockSelect
                }
            }

            _onNewsletterPopupSelect() {
                if (!this.blocksCount) return;
                this._open();
            }
            
            _onNewsletterPopupDeselect() {
                this._close();
            }
            
            _onNewsletterPopupBlockSelect() {
                if (this.opened) return;
                this._open();
            }

            _open() {
                if (this.usingFloatingButton) {                    
                    this.$newsletterPopup._showFloatingButton();
                } else {
                    if (!this.usingPopover) {
                        const dialog = this.$modal.querySelector('dialog') 
                        dialog.inert = true;
                    }
                    this.$newsletterPopup._openPopup();
                    if (!this.usingPopover) {
                        dialog.inert = false;
                    }
                }
            }

            _close() {
                if (this.usingFloatingButton) {
                    $hide(this.$floatingButton);
                } 
                if (this.usingPopover) {
                    this.$popover.hidePopover();
                } else {
                    this.$modal.dispatchEvent(DOMEvents.MODAL_CLOSE);
                }
                this.opened = false;
            }

            get $modal () {
                return this.$newsletterPopup.querySelector('modal-container');
            }

            get $floatingButton() {
                return this.$newsletterPopup.querySelector('[data-element="floating-button"]');
            }

            get $popover() {
                return this.$newsletterPopup.querySelector('[data-element="popover"]');
            }

            get $newsletterPopup() {
              return document.querySelector('newsletter-popup');
            }

            get usingFloatingButton() {
                return this.$newsletterPopup.hasAttribute('floating-button');
            }
            
            get usingPopover() {
                return this.$newsletterPopup.hasAttribute('use-popover');
            }
        }
        const newsletterEditorUX = new EditorNewsletterPopup('{{ section.id }}');
        newsletterEditorUX.blocksCountSelector = '[data-{{section.id}}-blocks-size-settings]';
        newsletterEditorUX.render();
    </script>
{%- endif -%}

